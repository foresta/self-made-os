     9                                  ; 以下は標準的なFAT12フォーマットフロッピーディスクのための記述
    10 00000000 EB4E                    	JMP		entry
    11 00000002 90                      	DB		0x90
    12 00000003 48454C4C4F49504C        	DB		"HELLOIPL"		; ブーとセクタの名前を自由に書いてよい (8Byte)
    13 0000000B 0002                    	DW		512				; 1セクタの大きさ (512にしなければならない)
    14 0000000D 01                      	DB		1				; クラスタの大きさ (1セクタにしなければならない)
    15 0000000E 0100                    	DW		1				; FATがどこから始まるか (普通は1セクタ目からにする)
    16 00000010 02                      	DB		2				; FATの個数 (2にしなければならない)
    17 00000011 E000                    	DW		224				; ルートディレクトリ領域の大きさ (通常は224エントリにする)
    18 00000013 400B                    	DW		2880			; このドライブの大きさ (2880セクタにしなければならない)
    19 00000015 F0                      	DB		0xf0			; メディアタイプ (0xf0にしなければならない)
    20 00000016 0900                    	DW		9				; FAT領域の長さ (9セクタにしなければならない)
    21 00000018 1200                    	DW		18				; 1トラックに幾つのセクタがあるか (18セクタにしなければならない)
    22 0000001A 0200                    	DW		2				; ヘッドの数 (2にしなければならない)
    23 0000001C 00000000                	DD		0				; パーティションを使っていないので必ず0
    24 00000020 400B0000                	DD		2880			; このドライブの大きさをもう一度書く
    25 00000024 000029                  	DB		0, 0, 0x29		; よくわからないけどこの値にしておくといいらしい
    26 00000027 FFFFFFFF                	DD		0xffffffff		; 多分ボリュームシリアル番号
    27 0000002B 48454C4C4F2D4F5320-     	DB		"HELLO-OS   "	; ディスクの名前 (11Byte)
    27 00000034 2020               
    28 00000036 4641543132202020        	DB		"FAT12   "		; フォーマットの名前 (8Byte)
    29 0000003E 00<rept>                	TIMES	18 DB 0			; とりあえず18バイト開けておく
    30                                  
    31                                  ; Program Main Body
    32                                  ; 10(シリンダー) * 2(表裏) * 18(sector) * 512(byte/sector) = 184,320バイト = 180KB を読み込む
    33                                  entry:
    34 00000050 B80000                  	MOV		AX, 0			; アキュムレータレジスタの初期化
    35 00000053 8ED0                    	MOV		SS, AX			; SSはスタックセグメント
    36 00000055 BC007C                  	MOV		SP, 0x7c00		; スタックポインタを 0x7c00 へ移動
    37 00000058 8ED8                    	MOV		DS, AX			; DSはデータセグメント
    38                                  
    39                                  	; INT 0x13 はディスクからの読込、書込、セクタのベリファイ、及びシーク
    40                                  	;     読み込み: AH = 0x02
    41                                  	;     書き込み: AH = 0x03
    42                                  	;     ベリファイ: AH = 0x04
    43                                  	;     シーク: AH = 0x0c
    44                                  	; 今回はAH = 0x02 に設定しているの読み込み
    45                                  	; ドライブは0, シリンダは0, セクタは2, ヘッドは表(0) から1セクタ分を読む
    46                                  	; バッファアドレスはディスクからメモリのどこへプログラムをロードするかのアドレス
    47                                  	;     処理するセクタ数->AL, シリンダ番号->CH, セクタ番号->CL,
    48                                  	;     ヘッド番号->DH, ドライブ番号->DL, バッファアドレス->ES:BX
    49 0000005A B82008                  	MOV		AX, 0x0820
    50 0000005D 8EC0                    	MOV		ES, AX			; ESはエクストラセグメント
    51 0000005F B500                    	MOV		CH, 0			; シリンダ0
    52 00000061 B600                    	MOV		DH, 0			; ヘッド0
    53 00000063 B102                    	MOV		CL, 2			; セクタ2
    54                                  
    55                                  readloop:
    56 00000065 BE0000                  	MOV		SI, 0			; 失敗回数を数えるためのレジスタ
    57                                  
    58                                  retry:
    59 00000068 B402                    	MOV		AH, 0x02		; AH=0x02 : ディスク読み込み
    60 0000006A B001                    	MOV		AL, 1			; 1セクタ
    61 0000006C BB0000                  	MOV		BX, 0
    62 0000006F B200                    	MOV		DL, 0x00		; A ドライブ
    63 00000071 CD13                    	INT		0x13			; ディスクBIOSの呼び出し
    64 00000073 7310                    	JNC		next			; carry フラグが1じゃない = 失敗じゃない → fin
    65 00000075 83C601                  	ADD		SI, 1			; 失敗回数のIncrement
    66 00000078 83FE05                  	CMP		SI, 5			; 5回になっているか
    67 0000007B 7331                    	JAE		error			; if SI >= 5 then error. (jump if above or equal)
    68 0000007D B400                    	MOV		AH, 0x00
    69 0000007F B200                    	MOV		DL, 0x00		; Aドライブ
    70 00000081 CD13                    	INT		0x13			; ドライブのリセット
    71 00000083 EBE3                    	JMP		retry			; ループ
    72                                  
    73                                  next:
    74 00000085 8CC0                    	MOV		AX, ES			; アドレスを 0x0020進める. バッファアドレスは ES * 16 + BX
    75 00000087 83C020                  	ADD		AX, 0x0020		; 1セクタ512バイトなので 0x0020 * 16 = 32 * 16 = 512 分だけバッファアドレスを進めたい
    76 0000008A 8EC0                    	MOV		ES, AX			; バッファアドレスで使用されるEXをすすめる 
    77 0000008C 80C101                  	ADD		CL, 1			; CLに1足して、次のセクタをよむ用にする
    78 0000008F 80F912                  	CMP		CL, 18			; CLと18を比較
    79 00000092 76D1                    	JBE		readloop		; CL <= 18 だったらreadloop
    80                                  
    81                                  	; セクタを18まで読み終わった時
    82 00000094 B101                    	MOV		CL, 1			; セクタを1に戻す
    83 00000096 80C601                  	ADD		DH, 1			; ヘッドに1足す => ヘッドを1にして裏面を読む
    84 00000099 80FE02                  	CMP		DH, 2			; 裏面を読み終わっているかどうかのチェック
    85 0000009C 72C7                    	JB		readloop		; DH < 2 だったら readloop
    86                                  
    87                                  	; 裏面を読み終わった時
    88 0000009E B600                    	MOV		DH, 0			; ヘッドを表に戻す
    89 000000A0 80C501                  	ADD		CH, 1			; シリンダ番号をIncrement	
    90 000000A3 80FD0A                  	CMP		CH, CYLS		; シリンダを読み終えたかどうか
    91 000000A6 72BD                    	JB		readloop		; CH < CYLS だっらreadloop
    92                                  
    93 000000A8 E9(00C2)                	JMP		OS_BODY			; ブーとセクタの読み込みが終わったのでOS本体を実行
    94                                  
    95                                  fin:
    96 000000AB F4                      	HLT						; 何かあるまでCPUを停止
    97 000000AC EBFD                    	JMP		fin				; 無限ループ
    98                                  
    99                                  error:
   100 000000AE BE[C300]                	MOV		SI, msg			; SIはソースインデックス (読み込みインデックス) msgのメモリアドレスをSIに設定
   101                                  
   102                                  putloop:
   103 000000B1 8A04                    	MOV		AL, [SI]		; メモリのSI番地の値を1バイト分 AL (Accumrator Low アキュムレータレジスタの下位8バイト) に読み込む
   104 000000B3 83C601                  	ADD		SI, 1			; ソースインデックスをひとつ進める
   105 000000B6 3C00                    	CMP		AL, 0			; AL (msgメモリないの値) == 0 ならば終了
   106 000000B8 74F1                    	JE		fin
   107 000000BA B40E                    	MOV		AH, 0x0e		; 1文字表示ファンクション (AHはアキュムレータレジスタの上位8bit)
   108 000000BC BB0F00                  	MOV		BX, 15			; カラーコード (BXはベースレジスタ)
   109 000000BF CD10                    	INT		0x10			; ビデオBIOS呼び出し
   110 000000C1 EBEE                    	JMP		putloop
   111                                  
   112                                  msg:
   113 000000C3 0A0A                    	DB		0x0a, 0x0a
   114 000000C5 6C6F61642C20657272-     	DB		"load, error"
   114 000000CE 6F72               
   115 000000D0 0A                      	DB		0x0a
   116 000000D1 00                      	DB		0
